<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title || 'All Books' %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="site-header">
    <h1>Berties Book Shop</h1>
    <p>All available books</p>
  </header>

  <main>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Book title</th>
          <th>Price (Â£)</th>
        </tr>
      </thead>
      <tbody>
        <% if (availableBooks && availableBooks.length > 0) { %>
          <% availableBooks.forEach(function (book) { %>
            <tr>
              <td><%= book.id %></td>
              <td><%= book.name %></td>
              <td><%= book.price %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="3">No books found in the database.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <p><a href="/">Back to home</a></p>
  </main>
</body>
</html>
