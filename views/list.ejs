      <div class="alert bad">No books in the catalogue yet.</div>
    <% } else { %>
      <table class="table">
        <thead><tr><th>Title</th><th>Author</th><th>Price</th></tr></thead>
        <tbody>
          <% rows.forEach(b => { %>
            <tr>
              <td><%= b.title %></td>
              <td><%= b.author %></td>
              <td>Â£<%= Number(b.price).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </section>
