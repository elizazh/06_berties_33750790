<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Books</title>
</head>
<body>
  <h2>Books</h2>

  <% if (!availableBooks || !availableBooks.length) { %>
    <p>No books found.</p>
  <% } else { %>
    <ul>
      <% availableBooks.forEach(b => { %>
        <li><strong><%= b.name %></strong> — £<%= Number(b.price).toFixed(2) %></li>
      <% }) %>
    </ul>
  <% } %>

  <p><a href="/">Home</a></p>
</body>
</html>
